<Window x:Class="BabkiBabki.NewCatWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:BabkiBabki"
        Style="{StaticResource MaterialDesignWindow}"
        mc:Ignorable="d"
        Title="NewCatWindow" Height="200" Width="400"
        FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox FontStyle="Italic"
                 x:Name="TextBoxBob"
                 FontSize="20"
            VerticalAlignment="Center"
            Grid.ColumnSpan="2" 
                 Margin="10"></TextBox>
        
       

        <Button 
            x:Name="SaveButton"
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            materialDesign:ButtonAssist.CornerRadius="5"
            Margin="10" Grid.Row="2" Grid.Column="2" Click="SaveButton_OnClick">Сохранить</Button>
    </Grid>
</Window>
